<!DOCTYPE html>  
<html>  
  <head>  
      <title>Zenezörej</title>  
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta http-equiv="content-type" content="text/html;charset=utf-8">

      {% block stylesheets %}

        {% stylesheets  'bundles/zenezorejbase/css/bootstrap.min.css' 
                        'bundles/zenezorejbase/css/bootstrap-responsive.min.css'
                                                    filter='cssrewrite' %}

            <link rel="stylesheet" href="{{ asset_url }}" />
            
        {% endstylesheets %}
      {% endblock %}
      
      <style>
      	html, body {
      		margin: 0;
      	}

      	#logout {
      		margin-top: 5px;
      		float: right;
      	}
      </style>
  </head>  
    <body>  

<nav class="navbar navbar-default" role="navigation">

    <!-- Collect the nav links, forms, and other content for toggling -->
    <!-- <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1"> -->
      <ul class="nav navbar-nav">
        <li {% if currentPage|default('news') == "news" %} class="active" {% endif %}>
        	<a href="{{ path('zenezorej_admin_pages_news') }}">Hírek</a>
        </li>
        <li {% if currentPage|default('news') == "events" %} class="active" {% endif %}>
        	<a href="{{ path('zenezorej_admin_pages_events') }}">Rendezvények</a>
        </li>
        <li><a href="#">Publikációk</b></a></li>
      </ul>

      {% if app.user %}
      <div id="logout">
    	<a class="btn btn-default" href="{{ path('logout') }}#home">Kijelentkezés</a>
      </div>
      {% endif %}
    <!-- </div> -->
</nav>

      {% block body %}

      {% endblock %}

      {% block javascripts %}

      <script src="http://code.jquery.com/jquery.js"></script>
      <script src="{{ asset('bundles/zenezorejbase/js/bootstrap.min.js') }}"></script>  
      <script src="{{ asset('bundles/zenezorejadminpages/js/bootbox.min.js') }}"></script>  
      <script src="{{ asset('bundles/zenezorejadminpages/js/common.js') }}"></script>  
      <script src="{{ asset('bundles/zenezorejadminpages/js/ckeditor/ckeditor.js') }}"></script>

      {% endblock %}
  </body>  
</html>  