{% extends 'ZenezorejAdminPagesBundle:Default:index.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	
	<style>
		.row {
			margin: 0 10px;
		}

		.panel-body {
			padding: 0;
			padding-bottom: 10px;
		}

 	</style>
{% endblock %}

{% block body %}

<div class="row" id="main-content">

	{% for row in news %}

	<div class="panel panel-default">
	  <div class="panel-body">
	  	<div class="col-lg-6">
	    {{ row.date|date("Y. M d.") }}
		</div>
		<div class="col-lg-6">
			<button style="float: right; margin: 0;" type="button" class="btn btn-danger delete-news" data-id="{{ row.id }}">Töröl</button>
		</div>
	  </div>
	  <div class="panel-footer">{{ row.content }}</div>
	</div>
	
	{% endfor %}

</div>

{% endblock %}